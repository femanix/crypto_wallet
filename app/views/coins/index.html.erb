<p id="notice"><%= notice %></p>

<h1><%= Coin.model_name.human(count: @coins.count) %></h1>

<%= data_br(Date.today)%>  
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_img) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_img, size: "25"%></td>
        <td><%= link_to t('links.show'), coin , class: "btn btn-primary" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class: "btn btn-secondary" %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('notice.confirm') }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.coin'), new_coin_path, class: "btn btn-success" %>